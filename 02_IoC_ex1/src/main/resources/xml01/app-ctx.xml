<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <!-- Contact, Address, Person bean 만들기 -->
  <bean class="com.gdu.app02.xml01.Contact" id="contact">
    <property name="mobile" value="1234" />
    <property name="fax" value="5678" />
  </bean>
  
  <bean class="com.gdu.app02.xml01.Address" id="adress">
    <property name="postcode" value="1111" />
    <property name="jibun" value="1111" />
    <property name="road" value="1111" />
  </bean>
  
  <bean class="com.gdu.app02.xml01.Person" id="person">
    <constructor-arg value="루피"/>
      <constructor-arg ref="20"/>
      <constructor-arg ref="calc"/>
  </bean>

</beans>
